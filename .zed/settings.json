{
  "language_servers": ["!biome", "!tsgo", "!typescript-language-server", "..."],
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx", "cn"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"],
        },
      },
    },
  },
  "languages": {
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "format_on_save": "on",
    },
    "CSS": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "format_on_save": "on",
    },
    "JavaScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "format_on_save": "on",
    },
    "TSX": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "format_on_save": "on",
    },
  },
}
